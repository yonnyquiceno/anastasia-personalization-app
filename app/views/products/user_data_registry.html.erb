<h3 class="title">Confirm Purchase</h3>
<h3 class="subtitle">This is your creation
	<i class="fa fa-heart" aria-hidden="true"></i>
</h3>
<%= include_gon %>
<div class="cart-form col-lg-12 col-md-12 col-s-12">
	<table class="table cart-form--table">
		<thead>
			<tr>
				<th>PRODUCT</th>
				<th>COLORS</th>
				<th>FABRIC INTERIOR</th>
				<th>FABRIC EXTERIOR</th>
				<th>PRICE</th>
			</tr>
		</thead>
		<tbody>
			<script>
			var index = 0;
			</script>
			<%@products.each do |prod|%>
			<tr>
				<td><%= image_tag(asset_path(prod.article.image1.to_s + ".jpg"), :class => "cart-block--img")%></td>
				<td>
					<center>
						<script>
							var id_one = Math.random().toString(36).substring(7);
							var id_two = Math.random().toString(36).substring(7);
							var id_three = Math.random().toString(36).substring(7);
							var id_four = Math.random().toString(36).substring(7);
							var id_five = Math.random().toString(36).substring(7);
							document.write('<span id='.concat(id_one).concat(' class="color-box"> </span>'));
							document.write('<span id='.concat(id_two).concat(' class="color-box"> </span>'));
							document.write('<span id='.concat(id_three).concat(' class="color-box"> </span>'));
							document.write('<span id='.concat(id_four).concat(' class="color-box"> </span>'));
							document.write('<span id='.concat(id_five).concat(' class="color-box"> </span>'));

							var product_colors = gon.product_colors
							document.getElementById(id_one).style.backgroundColor = product_colors[index][0][0];
							document.getElementById(id_two).style.backgroundColor = product_colors[index][0][1];
							document.getElementById(id_three).style.backgroundColor = product_colors[index][0][2];
							document.getElementById(id_four).style.backgroundColor = product_colors[index][0][3];
							document.getElementById(id_five).style.backgroundColor = product_colors[index][0][4];
							if (typeof product_colors[index][0][0] === 'undefined' || product_colors[index][0][0] === null) {
								alert(' Aplicación en construcción, si desea observar el listado de colores elegidos  seleccione el primer producto de la categoría bags')
							}
							index += 1;
						</script>
					</center>
				</td>
				<td>
					<center><%=prod.material_parts.first.material.material_name if prod.material_parts.first.present?%></center>
				</td>
				<td>
					<center><%=prod.material_parts.first(2).last.material.material_name if prod.material_parts.first.present?%></center>
				</td>
			</tr>
			<%end%>
		</tbody>
	</table>
</div>
<div class="cart-form col-lg-12 col-md-12 col-small-12">
	<h3 class="subtitle">Let's buy
		<i class="fa fa-credit-card-alt" aria-hidden="true"></i>
	</h3>
</div>
<div class="cart-form col-lg-12 col-md-12 col-small-12">
	<h3 class="subtitle">Tell us about you to send your product
		<i class="fa fa-shopping-cart" aria-hidden="true"></i>
	</h3>
	<form class="form-horizontal" id="form-purchase" action="">
		<div class="form-group">
			<label class="col-sm-3 control-label" for="Username">Your mame</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" id="username" onblur="validate()">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label" for="Username">Your Last Name</label>
			<div class="col-sm-9">
				<input type="text" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label" for="Username">E-mail</label>
			<div class="col-sm-9">
				<input type="text" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label" for="Username">Address</label>
			<div class="col-sm-9">
				<input type="text" class="form-control">
			</div>
		</div>
		<div class="cart-form--btn">
			<center>
				<button type="submit" id="login" class="btn btn-buy">Buy</button>
				<button class=" btn btn-cancel" type="reset">Cancel</button>
			</center>
		</div>
		<div class="row">
			<div class="pull-right col-sm-12 col-md-8 col-lg-8">
				<p id="error"></p>
			</div>
		</div>
		<div class="row"></div>
	</form>
</div>
</div>

</div>
